source "https://rubygems.org"

gem "jekyll"
gem "sinatra"
gem "sinatra-contrib"
gem "json"
gem "sqlite3"
gem "thin"
gem "rack"
gem "rack-cors"
gem "httparty"  # 添加 HTTP 请求库
gem "nokogiri"  # 添加 HTML 解析库
source "https://rubygems.org"

# 核心依赖
gem "jekyll"
gem "webrick"

# 主题和插件
gem "minima"
gem "jekyll-feed"
gem "jekyll-seo-tag"

# Windows 平台特定依赖
